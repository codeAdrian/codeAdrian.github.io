.project-card {
  transition: opacity 0.25s ease-in-out;
  text-align: left;
  padding: 0 var(--spacing-1) var(--spacing-2);

  @media (--screen-desktop-medium) {
    padding-bottom: 0;
    position: absolute;
    padding-left: var(--spacing-4);
    transform: translate3d(0, -50%, 0);
    top: 50%;
  }

  &:not(.project-card--active) {
    display: none;
    pointer-events: none;
    @media (--screen-desktop-medium) {
      display: block;
      opacity: 0;
    }
  }

  &--active {
    display: block;

    @media (--screen-desktop-medium) {
      opacity: 1;
    }
  }

  &__tags {
    margin-bottom: var(--spacing-1);
  }

  &__title {
    font-size: var(--font-size-2);

    @media (--screen-phone-large) {
      padding-right: var(--spacing-6);
    }

    @media (--screen-desktop-medium) {
      padding-right: 0;
    }
  }

  &__content {
    margin-bottom: var(--spacing-1);
    line-height: 1.75;
  }

  &__tag {
    color: var(--color-primary);
    font-size: var(--font-size-n1);
    letter-spacing: 0.01rem;
  }
}
