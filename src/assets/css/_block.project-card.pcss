.project-card {
  transition: opacity 0.5s var(--transition-easing);
  position: absolute;
  top: 50%;
  transform: translate3d(0, -50%, 0);
  padding-left: var(--spacing-4);
}

.project-card:not(.project-card--active) {
  opacity: 0;
  pointer-events: none;
}

.project-card--active {
  opacity: 1;
}
