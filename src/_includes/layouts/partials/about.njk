<section class="u-container u-container--larger about" id="js-about">
    <article data-glide-el="track" class="glide__track">
        <ul class="glide__slides about__list">
            {% for about in collections.about %}
                <li class="glide__slide card">
                    <div class="card__wrapper">
                        <figure class="card__figure card__figure--icon">
                            <span class="icon icon--{{ about.data.icon }}"></span>
                        </figure>
                        <h2 class="card__title">
                            {{ about.data.title }}
                        </h2>
                        <p class="card__content">
                            {{ about.data.description }}
                        </p>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </article>
</section>