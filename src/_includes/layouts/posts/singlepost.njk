---
title: singlepost.njk
layout: base
---

<main>

  {% include 'layouts/partials/billboard.njk' %}

  <div>
    <article>
      {{ content | safe }}
    </article>
  </div>

  {% if page.url !== "/about/" %}

  <div>
    <h3><a href="/posts">Other posts</a></h3>
  {% if nextPost.url %}
    <p>
      <strong>Next</strong>: 
      <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
    </p>
  {% endif %}
  {% if prevPost.url %}
    <p>
      <strong>Previous</strong>: 
      <a href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
    </p>
  {% else %}
    <p>&nbsp;</p>
  {% endif %}
  </div>
  {% endif %}
